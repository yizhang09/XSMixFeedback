<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/issue_edit_loading"
        style="@style/ListSpinner"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />


    <EditText
        android:id="@+id/issue_edit_title"
        android:layout_width="match_parent"
        android:hint="标题"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/issue_edit_desc"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:hint="描述"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Spinner
        android:id="@+id/issue_edit_type"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/issue_pub_image1"
            android:layout_width="60.0dip"
            android:layout_height="45.0dip"
            android:layout_marginLeft="5.0dip"
            android:clickable="true"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/issue_pub_image2"
            android:layout_width="60.0dip"
            android:layout_height="45.0dip"
            android:layout_marginLeft="5.0dip"
            android:clickable="true"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/issue_pub_image3"
            android:layout_width="60.0dip"
            android:layout_height="45.0dip"
            android:layout_marginLeft="5.0dip"
            android:clickable="true"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/issue_pub_image4"
            android:layout_width="60.0dip"
            android:layout_height="45.0dip"
            android:layout_marginLeft="5.0dip"
            android:clickable="true"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/issue_pub_image5"
            android:layout_width="60.0dip"
            android:layout_height="45.0dip"
            android:layout_marginLeft="5.0dip"
            android:clickable="true"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/issue_pub_image_upload"
            android:layout_width="60.0dip"
            android:layout_height="45.0dip"
            android:layout_marginLeft="5.0dip"
            android:src="@drawable/widget_bar_photo_nor"
            android:clickable="true" />





    </LinearLayout>


</LinearLayout>