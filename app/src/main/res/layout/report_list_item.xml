<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="8dip"
    android:background="@drawable/list_layout_item_selector">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.xcmgxs.xsmixfeedback.widget.CircleImageView
            android:id="@+id/projectreport_listitem_face"
            style="@style/UserFaceImageStyle" />

        <TextView
            android:id="@+id/projectreport_listitem_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="张毅"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/projectreport_listitem_title"
                style="@style/project_list_title"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="XXX混凝土"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/projectreport_listitem_time"
                    style="@style/project_list_someinfo"
                    android:text=""/>

            </LinearLayout>

        </LinearLayout>



        <TextView
            android:id="@+id/projectreport_listitem_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/project_list_description"
            android:text="XXXXXXXXXXXXXXXXXXXXX"/>

        <ImageView
            android:id="@+id/report_list_item_step_image"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:src="@drawable/step7" />

    </LinearLayout>

</LinearLayout>