<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="7dip"
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="8dip"
    android:background="@drawable/list_layout_item_selector"
    tools:context=".ui.fragments.ExploreLatestListProjectFragment" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.xcmgxs.xsmixfeedback.widget.CircleImageView
            android:id="@+id/exploreproject_listitem_userface"
            style="@style/UserFaceImageStyle" />

        <TextView
            android:id="@+id/exploreproject_listitem_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="张毅"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/exploreproject_listitem_title"
                style="@style/project_list_title"
                android:text="XX项目"/>
            
            <ImageView
                android:id="@+id/exploreproject_listitem_isstop"
                android:layout_width="30dip"
                android:layout_height="18dip"
                android:src="@drawable/redball"
                android:visibility="gone"/>

        </LinearLayout>



        <TextView
            android:id="@+id/exploreproject_listitem_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/project_list_description"
            android:text="XXXXXXXXXXXXXXXXX"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dip">
            
            <ImageView
                style="@style/project_list_img"
                android:contentDescription="@string/img_description"
                android:src="@drawable/language"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/exploreproject_listitem_type"
                style="@style/project_list_someinfo"
                android:text="HZS180K"
                android:visibility="gone"/>

            <!-- station nums -->
            <ImageView
                style="@style/project_list_img"
                android:contentDescription="@string/img_description"
                android:src="@drawable/fork"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/exploreproject_listitem_station"
                style="@style/project_list_someinfo"
                android:text="2"
                android:visibility="gone"/>

            <ImageView
                style="@style/project_list_img"
                android:contentDescription="@string/img_description"
                android:src="@drawable/unstar"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/exploreproject_listitem_statename"
                style="@style/project_list_someinfo"
                android:text="正在安装"
                android:textColor="@color/green"
                android:visibility="gone"/>


            <ImageView
                android:id="@+id/exploreproject_listitem_state"
                android:layout_height="25dip"
                android:layout_width="match_parent"
                android:contentDescription="@string/img_description"
                android:src="@drawable/s7" />

            </LinearLayout>
        </LinearLayout>

</LinearLayout>