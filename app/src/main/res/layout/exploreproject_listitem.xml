<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="7dip"
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="8dip"
    android:background="@drawable/list_layout_item_selector"
    tools:context=".ui.fragments.ExploreLatestListProjectFragment" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.xcmgxs.xsmixfeedback.widget.CircleImageView
            android:id="@+id/exploreproject_listitem_userface"
            style="@style/UserFaceImageStyle" />

        <TextView
            android:id="@+id/exploreproject_listitem_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="张毅"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exploreproject_listitem_title"
            style="@style/project_list_title"
            android:text="XX项目"/>

        <TextView
            android:id="@+id/exploreproject_listitem_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/project_list_description"
            android:text="XXXXXXXXXXXXXXXXX"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:orientation="horizontal"
            android:gravity="center">
            
            <ImageView
                style="@style/project_list_img"
                android:contentDescription="@string/img_description"
                android:src="@drawable/language" />
            <TextView
                android:id="@+id/exploreproject_listitem_type"
                style="@style/project_list_someinfo"
                android:text="HZS180K"/>

            <!-- station nums -->
            <ImageView
                style="@style/project_list_img"
                android:contentDescription="@string/img_description"
                android:src="@drawable/fork" />

            <TextView
                android:id="@+id/exploreproject_listitem_station"
                style="@style/project_list_someinfo"
                android:text="2"/>

            <ImageView
                style="@style/project_list_img"
                android:contentDescription="@string/img_description"
                android:src="@drawable/unstar" />

            <TextView
                android:id="@+id/exploreproject_listitem_state"
                style="@style/project_list_someinfo"
                android:text="正在安装"
                android:textColor="@color/green"/>


            <!--<ImageView-->
                <!--android:id="@+id/exploreproject_listitem_state"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_width="match_parent"-->
                <!--android:contentDescription="@string/img_description"-->
                <!--android:src="@drawable/step7" />-->

            </LinearLayout>
        </LinearLayout>

</LinearLayout>