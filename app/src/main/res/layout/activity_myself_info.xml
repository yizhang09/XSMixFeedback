<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myself_info_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:fadingEdge="none"
    android:scrollbars="vertical"
    tools:context="com.xcmgxs.xsmixfeedback.ui.MySelfInfoActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="15.0dip">

        <include
            layout="@layout/activity_myself_info_head"
            android:visibility="visible" />

        <include layout="@layout/activity_myself_info_footer" />
        
        <Button
            android:id="@+id/myself_info_logout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:minHeight="45dip"
            android:background="@drawable/btn_style_red"
            android:textColor="@color/white"
            android:textSize="@dimen/space_15"
            android:text="@string/main_menu_logout"/>

    </LinearLayout>

</ScrollView>
