        <EditText
            android:id="@+id/log_pub_content"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:hint="描述"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="@dimen/text_size_18"
                android:text="当前进度:"/>

            <Spinner
                android:id="@+id/log_pub_progress"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="@dimen/text_size_18"
                android:text="日志类型:"/>

            <Spinner
                android:id="@+id/log_pub_type"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="@dimen/text_size_18"
                android:text="时间节点:"/>

            <Spinner
                android:id="@+id/log_pub_step"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/log_pub_image1"
                android:layout_width="60.0dip"
                android:layout_height="45.0dip"
                android:layout_marginLeft="5.0dip"
                android:clickable="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/log_pub_image2"
                android:layout_width="60.0dip"
                android:layout_height="45.0dip"
                android:layout_marginLeft="5.0dip"
                android:clickable="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/log_pub_image3"
                android:layout_width="60.0dip"
                android:layout_height="45.0dip"
                android:layout_marginLeft="5.0dip"
                android:clickable="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/log_pub_image4"
                android:layout_width="60.0dip"
                android:layout_height="45.0dip"
                android:layout_marginLeft="5.0dip"
                android:clickable="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/log_pub_image5"
                android:layout_width="60.0dip"
                android:layout_height="45.0dip"
                android:layout_marginLeft="5.0dip"
                android:clickable="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/log_pub_image_upload"
                android:layout_width="60.0dip"
                android:layout_height="45.0dip"
                android:layout_marginLeft="5.0dip"
                android:src="@drawable/widget_bar_photo_nor"
                android:clickable="true" />





        </LinearLayout>


    </LinearLayout>


