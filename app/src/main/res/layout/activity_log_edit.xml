<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/log_pub_message1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:visibility="gone" >
        <LinearLayout
            android:id="@+id/log_pub_message2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5.0dip"
            android:background="@drawable/review_bg_blue">
            <ProgressBar style="@style/loading_small"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="日志发布中···"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/log_pub_form"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:visibility="visible"
        android:layout_weight="1">

        <EditText
            android:id="@+id/log_pub_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:autoLink="web"
            android:gravity="top"
            android:hint="请输入内容"
            android:background="@null" />

        <ImageView
            android:id="@+id/log_pub_image"
            android:layout_width="60.0dip"
            android:layout_height="45.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginBottom="150.0dip"
            android:layout_gravity="left|bottom"
            android:clickable="true"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:orientation="horizontal"
            android:layout_marginLeft="5.0dip"
            android:layout_marginBottom="100.0dip"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="@dimen/text_size_18"
                android:text="当前进度:"/>

            <Spinner
                android:id="@+id/log_pub_progress"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:orientation="horizontal"
            android:layout_marginLeft="5.0dip"
            android:layout_marginBottom="50.0dip"
            android:layout_gravity="bottom">
            
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="@dimen/text_size_18"
                android:text="日志类型:"/>

            <Spinner
                android:id="@+id/log_pub_type"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:orientation="horizontal"
            android:layout_marginLeft="5.0dip"
            android:layout_marginBottom="5.0dip"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="@dimen/text_size_18"
                android:text="时间节点:"/>

            <Spinner
                android:id="@+id/log_pub_step"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

        </LinearLayout>






    </FrameLayout>

    <include layout="@layout/activity_log_edit_footer" />

</LinearLayout>

