<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="7dip"
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/projectfile_listitem_filetype"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:padding="1dip"
        android:src="@drawable/unknownfile"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/projectfile_listitem_projectname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/listitem_blue"
            android:textSize="@dimen/text_size_14"
            android:text="XXX混凝土"/>

        <TextView
            android:id="@+id/projectfile_listitem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/listitem_gray"
            android:textSize="@dimen/text_size_14"
            android:text="XX文件"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/projectfile_listitem_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/listitem_gray"
                android:textSize="@dimen/text_size_10"
                android:text="2015-04-20"/>

            <TextView
                android:id="@+id/projectfile_listitem_uploader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:textColor="@color/listitem_gray"
                android:textSize="@dimen/text_size_10"
                android:text="张毅"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>